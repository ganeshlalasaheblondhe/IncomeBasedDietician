<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/home"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Shree Niket"
        android:textColor="#F10454"
        android:layout_margin="10dp"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/welcomemsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome To Dietary"
        android:textColor="#FFFFFF"
        android:background="#5CB2CA"
        android:layout_margin="10dp"
        android:textSize="25dp"></TextView>
    <TextView
        android:id="@+id/yourweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your Weight: 198 Lb's"
        android:textColor="#FFFFFF"
        android:background="#5CB2CA"
        android:layout_margin="10dp"
        android:textSize="25dp"></TextView>
    <TextView
        android:id="@+id/yourheight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your Height: 67 Inches"
        android:textColor="#FFFFFF"
        android:background="#5CB2CA"
        android:layout_margin="10dp"
        android:textSize="25dp"></TextView>
    <TextView
        android:id="@+id/yourcalariesfortoday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your Cal For Today: 2000 Cal"
        android:textColor="#FFFFFF"
        android:background="#5CB2CA"
        android:layout_margin="10dp"
        android:textSize="25dp"></TextView>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>